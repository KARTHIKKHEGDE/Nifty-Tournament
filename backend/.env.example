# Nifty Options Trading Platform - Environment Variables
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/nifty_trading

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# JWT Secret (generate a random secret key)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Market Data API Credentials (OPTIONAL - for real-time market data)
# Leave empty if you don't have API credentials
MARKET_API_KEY=
MARKET_API_SECRET=
MARKET_ACCESS_TOKEN=

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Paper Trading Settings
PAPER_TRADING_ONLY=True
INITIAL_VIRTUAL_BALANCE=100000.0

# Market Hours (IST)
MARKET_OPEN_HOUR=9
MARKET_OPEN_MINUTE=15
MARKET_CLOSE_HOUR=15
MARKET_CLOSE_MINUTE=30

# Trading Limits
MAX_POSITION_SIZE=50000.0
MAX_ORDERS_PER_DAY=100
MIN_ORDER_VALUE=100.0

# Admin Configuration
# Comma-separated list of admin email addresses
ADMIN_EMAILS=admin@example.com
ADMIN_NOTIFICATION_EMAIL=admin@example.com

# Analytics
ANALYTICS_CACHE_TTL=300

# Logging
LOG_LEVEL=INFO

# Celery (Optional - leave empty to use Redis URL)
CELERY_BROKER_URL=
CELERY_RESULT_BACKEND=
